@model List<ContactoModel>;
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/wwwroot/css/stylesheet.css" rel="stylesheet" />
</head>
<div class="card col-8">
    <div class="card-header">
        Lista de contacto
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-primary btn-sm">Crear Nuevo</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th>Clave</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem=>item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem=>item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem=>item.Correo)</td>
                        <td>@Html.DisplayFor(modelItem=>item.Clave)</td>

                        <td>
                            <a asp-action="Editar" asp-controller="Mantenedor" asp-route-IdContacto="@item.IdContacto" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Mantenedor" asp-route-IdContacto="@item.IdContacto" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
